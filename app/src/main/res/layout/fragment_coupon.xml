<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RedeemPointsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TextView displaying total points -->
        <TextView
            android:id="@+id/textViewTotalPoints"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:height="50dp"
            android:background="@drawable/rounded_pink_boldstroke"
            android:textSize="22sp"
            android:textColor="@color/pink_primary"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Your Total Coupon\n4" />

        <!-- RecyclerView displaying items -->
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>
