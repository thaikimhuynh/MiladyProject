<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:src="@mipmap/ic_imgshoes" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="326dp"
        android:layout_height="110dp">

        <TextView
            android:id="@+id/id_order"
            android:layout_width="110dp"
            android:layout_height="21dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:text="P_01"
            app:layout_constraintBottom_toTopOf="@+id/name_user_order"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_user_order"
            android:layout_width="109dp"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:text="Crystal Heels"
            app:layout_constraintBottom_toTopOf="@+id/stock"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/stock"
            android:layout_width="96dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="10dp"
            android:gravity="bottom"
            android:text="Stock"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/Price"
            android:layout_width="92dp"
            android:layout_height="20dp"
            android:layout_marginStart="108dp"
            android:layout_marginBottom="8dp"
            android:text="$40"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/stock" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="17dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toTopOf="@+id/Price"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@mipmap/ic_bin" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>