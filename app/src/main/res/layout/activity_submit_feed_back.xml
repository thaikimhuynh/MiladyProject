<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmitFeedBackActivity">
    <ImageButton
        android:id="@+id/left_arrow_button"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_arrow_left"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/tickIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:src="@mipmap/ic_success"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/left_arrow_button" />

    <TextView
        android:id="@+id/youHaveGotText"
        android:layout_width="wrap_content"
        android:fontFamily="@font/noto_sans_font"
        android:layout_height="wrap_content"
        android:text="You have got"
        android:textColor="@color/pink_second"
        android:textStyle="bold"
        android:textSize="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tickIcon"
        app:layout_constraintVertical_bias="0.275" />
    <LinearLayout
        android:id="@+id/linear_pointext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/youHaveGotText"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Number -->
        <TextView
            android:id="@+id/pointsNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_font"
            android:text="200"
            android:textColor="@color/pink_second"
            android:textSize="50sp"
            android:textStyle="bold" />

        <!-- Points -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" points"
            android:fontFamily="@font/noto_sans_font"
            android:textSize="16sp"
            android:textColor="@color/pink_second"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewMyPointsButton"
        android:layout_width="356dp"
        android:layout_height="48dp"
        android:text="View my points"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/backtoHomeButton"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_pink_button_background"
       />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backtoHomeButton"
        android:layout_width="356dp"
        android:layout_height="48dp"
        android:text="Back To Home"
        android:textColor="@color/pink_second"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rounded_button_notifi"

/>




</androidx.constraintlayout.widget.ConstraintLayout>