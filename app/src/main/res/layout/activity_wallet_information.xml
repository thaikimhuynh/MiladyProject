<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment.WalletInformationActivity">

    <EditText
        android:id="@+id/edtWalletInfo"
        android:layout_width="356dp"
        android:layout_height="49dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/rounded_edittext_black_stroke"
        android:ems="10"
        android:hint="Momo"
        android:inputType="number"
        android:paddingLeft="16dp"
        android:text=""
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_UserName"
        android:layout_width="356dp"
        android:layout_height="49dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/rounded_edittext_black_stroke"
        android:ems="10"
        android:hint="Phan Gia Huy"
        android:inputType="number"
        android:paddingLeft="16dp"
        android:text=""
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtWalletInfo" />

    <EditText
        android:id="@+id/edt_phoneNum"
        android:layout_width="356dp"
        android:layout_height="49dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/rounded_edittext_black_stroke"
        android:ems="10"
        android:hint="54353443 "
        android:inputType="number"
        android:paddingLeft="16dp"
        android:text=""
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_UserName" />

    <ImageView
        android:id="@+id/btn_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_PageTitle"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_PageTitle"
        app:srcCompat="@mipmap/ic_back" />

    <TextView
        android:id="@+id/tv_PageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="E-wallet Information"
        android:textColor="#F9476B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wallet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/edtWalletInfo"
        app:layout_constraintEnd_toEndOf="@+id/edtWalletInfo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtWalletInfo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/edt_UserName"
        app:layout_constraintEnd_toEndOf="@+id/edt_UserName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_UserName"
        app:layout_constraintTop_toBottomOf="@+id/wallet_name"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDelete"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/rounded_white_button_background"
        android:text="Delete"
        android:textColor="@color/pink_primary"
        app:layout_constraintEnd_toEndOf="@+id/edt_phoneNum"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edt_phoneNum"
        app:layout_constraintTop_toBottomOf="@+id/edt_phoneNum" />

    <TextView
        android:id="@+id/txt_phoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        app:layout_constraintBottom_toTopOf="@+id/edt_phoneNum"
        app:layout_constraintEnd_toEndOf="@+id/edt_phoneNum"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_phoneNum"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/edtWalletInfo"
        app:layout_constraintEnd_toEndOf="@+id/edtWalletInfo"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/edtWalletInfo"
        app:layout_constraintTop_toTopOf="@+id/edtWalletInfo"
        app:srcCompat="@mipmap/ic_momo" />

</androidx.constraintlayout.widget.ConstraintLayout>