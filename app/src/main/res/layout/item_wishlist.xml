<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:src="@mipmap/ic_imgshoes" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="326dp"
        android:layout_height="110dp">

        <TextView
            android:id="@+id/id_order"
            android:layout_width="110dp"
            android:layout_height="21dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:text="P_01"
            app:layout_constraintBottom_toTopOf="@+id/name_user_order"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/noto_sans_font"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_user_order"
            android:layout_width="109dp"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:text="Crystal Heels"
            app:layout_constraintBottom_toTopOf="@+id/stock"
            android:fontFamily="@font/noto_sans_font"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/stock"
            android:layout_width="96dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="10dp"
            android:gravity="bottom"
            android:text="Stock"
            android:fontFamily="@font/noto_sans_font"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView

            android:id="@+id/buttonPoints"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="bottom"
            android:background="@drawable/rounded_pink_primary_radius_rec"
            android:text="Add to Carts"
            android:fontFamily="@font/noto_sans_font"

            android:textColor="@color/white"
            android:layout_marginBottom="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"


            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>