<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:src="@mipmap/ic_imgshoes" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="326dp"
        android:layout_height="110dp">

        <TextView
            android:id="@+id/id_order"
            android:layout_width="110dp"
            android:layout_height="21dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:text="OD_01"
            app:layout_constraintBottom_toTopOf="@+id/name_user_order"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_user_order"
            android:layout_width="109dp"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:text="Nguyen Anh Linh"
            app:layout_constraintBottom_toTopOf="@+id/item_amount"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/item_amount"
            android:layout_width="96dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="12dp"
            android:gravity="bottom"
            android:text="x5"
            android:textColor="@color/grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/Price"
            android:layout_width="92dp"
            android:layout_height="20dp"
            android:layout_marginStart="108dp"
            android:layout_marginBottom="8dp"
            android:text="$40"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_amount" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="148dp"
            android:layout_marginBottom="52dp"
            android:text="19/04"
            android:textColor="@color/grey"
            app:layout_constraintBottom_toTopOf="@+id/Price"
            app:layout_constraintStart_toEndOf="@+id/id_order" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>