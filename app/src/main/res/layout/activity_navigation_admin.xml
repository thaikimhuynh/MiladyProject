<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.NavigationAdminActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view"
        android:layout_width="416dp"
        android:layout_height="656dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="410dp"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:background="@color/pink_primary"
        app:itemHorizontalPadding="4dp"
        app:itemIconTint="@color/color_admin_navigation"
        app:itemTextColor="@color/color_admin_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:menu="@menu/admin_menu_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>
